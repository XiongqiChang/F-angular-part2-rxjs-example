{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "number-leading-zero": "never",
    "at-rule-name-space-after": null,
    "selector-pseudo-element-colon-notation": "single",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "start",
          "end",
          "decrement",
          "increment",
          "vertical",
          "horizontal"
        ]
      }
    ],
    "color-hex-case": null,
    "selector-type-no-unknown": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "return",
          "mixin",
          "include",
          "keyframes:local",
          "extend",
          "for"
        ]
      }
    ]
  }
}
